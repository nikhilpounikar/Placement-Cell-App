<div class="form-page-container">
  <div class="form-container">
    <div class="form-heading">
      <h2 class="form-heading">Employee Registration</h2>
    </div>

    <form action="./sign-up" method="POST" class="form">
      <input type="text" class="input-box" placeholder="Name" id="name" name="name" required>

      <input type="email" class="input-box" placeholder="Email" id="email" name="email" required>

      <input type="password" class="input-box" placeholder="Password" id="password" name="password" required>

      <input type="password" class="input-box" placeholder="Confirm Password" id="confirmPassword"
        name="confirmPassword" required>

      <div class="form-button-container">
        <div class='btn-light'><button type="submit">Register</button></div>

      </div>
    </form>
  </div>

</div>